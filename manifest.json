{
  "name": "AutofillToggle",
  "description": "Toggles Chromeâ€™s address autofill on/off",
  "version": "1.1.5",
  "manifest_version": 3,

  "permissions": ["privacy"],
  
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "AutofillToggle",
    "default_icon": {
      "16":  "icons/icon16.png",
      "32":  "icons/icon32.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "commands": {
    "toggle-autofill": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Toggle Autofill on/off"
    }
  }
}
